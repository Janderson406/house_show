<%= form_for [event] do |f| %>

  <%= f.label :Selected_host_info_and_avatar_here %><br><br>


  <%= f.label :date %>
  <%= f.date_field :date, class: 'form-control' %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control', placeholder: "Enter event title" %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter event description" %>

  <%= f.label :ticket_link %>
  <%= f.url_field :ticket_link, class: 'form-control', placeholder: "http://" %>

  <%= f.label :category %>
  <%= f.text_field :category, class: 'form-control' %>

    <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
 <% end %>


