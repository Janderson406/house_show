
<div class="container-fluid well span6">
  <div class="row-fluid">


        <div class="span8">
            Email: <%= current_user.email %><br>
            Phone: <%= current_user.phone%><br>
            Address:
            <br>
        </div>

        <div class="span2">
            <div class="btn-group">
                <%= link_to 'Edit account & password settings', edit_user_registration_path, class: 'btn btn-sm btn-warning'%>
            </div>
        </div>
</div>
